{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0",
    "draft-js": "^0.10.5",
    "draft-js-export-markdown": "^1.3.3",
    "draft-js-import-markdown": "^1.3.3",
    "firebase": "^6.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-firebaseui": "^3.1.2",
    "react-intl": "^2.9.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "react-stripe-elements": "^3.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "use_staging": "cp src/config/staging.js src/config.js && firebase use staging",
    "use_default": "cp src/config/default.js src/config.js && firebase use default",
    "stage": "npm run use_staging && npm run deploy && npm run use_default",
    "stage_functions": "firebase use staging && firebase deploy --only functions && firebase use default",
    "eject": "react-scripts eject",
    "mocha": "mocha --require @babel/register --recursive",
    "babel": "babel src/const -d lib/src/const && babel test -d lib/test",
    "deploy": "react-scripts build && firebase deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@firebase/testing": "^0.10.1",
    "chai": "^4.2.0",
    "mocha": "^6.1.4"
  }
}
